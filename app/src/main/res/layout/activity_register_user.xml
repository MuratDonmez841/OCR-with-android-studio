<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    tools:context=".User.RegisterUser">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:textColor="#ffffff"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="Kullanıcı Adı:" />

            <EditText
                android:id="@+id/txt_Name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:layout_weight="0.25"
                android:maxLength="15"
                android:hint="En fazla 15 karakter"
                android:background="@drawable/edit_text_custom_input"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:visibility="gone"
            android:text="Kullanıcı adı kullanılmaktadır!"
            android:id="@+id/txt_user_registaration_name_control"
            android:gravity="center"
            android:textColor="#ffffff"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="E-Mail:" />

            <EditText
                android:id="@+id/txt_email"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.25"
                android:background="@drawable/edit_text_custom_input"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:maxLength="40"
                android:paddingStart="10dp"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_weight="0.1"
                android:text="Şifre: " />

            <EditText
                android:id="@+id/txt_password"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:hint="En az 6 karakter"
                android:background="@drawable/edit_text_custom_input"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingLeft="10dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="Şifre Tekrarı:" />

            <EditText
                android:id="@+id/txt_password2"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_custom_input"
                android:ems="10"
                android:layout_weight="0.25"
                android:hint="En az 6 karakter"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:paddingLeft="10dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/txt_sifre_uyusmazlıgı"
                android:textSize="18dp"
                android:text="Şifreler uyuşmuyor!"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_register_user_register_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:text="Kayıt Ol" />

        <TextView
            android:id="@+id/txt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hesabınız var mı?"
            android:textColor="#ffffff"
            android:layout_marginBottom="100dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:gravity="center_horizontal" />
    </LinearLayout>




</RelativeLayout>